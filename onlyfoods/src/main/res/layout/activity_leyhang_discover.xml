<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DLLeyhangDiscover"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".leyhangDiscover">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--        <androidx.appcompat.widget.Toolbar-->
        <!--            android:id="@+id/TBMainAct"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:background="?attr/colorPrimary"-->
        <!--            android:minHeight="?attr/actionBarSize" />-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <Button
                android:id="@+id/BtnFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="Filter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/BtnRecommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Recommend"
                app:layout_constraintEnd_toStartOf="@+id/BtnSaved"
                app:layout_constraintStart_toEndOf="@+id/BtnFilter"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/BtnSaved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:text="Saved"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/NHFLeyhangDiscover"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="620dp"
            android:layout_weight="1"
            app:defaultNavHost="false"
            app:navGraph="@navigation/nav_leyhang_discover" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/BottomNavViewDiscover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/R4"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            app:menu="@menu/menu_bottom"
            app:labelVisibilityMode="unlabeled">

        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>