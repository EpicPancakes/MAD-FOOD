<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CLDeals"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/gray_border">

    <ImageView
        android:id="@+id/IVDealsRestaurantLogo"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:background="#FF20AAF6"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/empty_restaurant" />

    <TextView
        android:id="@+id/TVDealsRestaurantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="A&amp;W"
        android:textColor="@color/R4"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/IVDealsRestaurantLogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053" />

    <TextView
        android:id="@+id/TVDealsCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Fast Food"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/IVDealsRestaurantLogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26" />

    <TextView
        android:id="@+id/TVDealsTitle"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:text='RM9.49 for Chicken Coney with 1 Root Beer (Regular) w..'
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/IVDealsRestaurantLogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.736" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BtnDealsPrice"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/rounded_rectangle_r2_12dp"
        android:text="Button"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#FFFFFF"
        android:textSize="8sp"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="RM 9.49" />

</androidx.constraintlayout.widget.ConstraintLayout>