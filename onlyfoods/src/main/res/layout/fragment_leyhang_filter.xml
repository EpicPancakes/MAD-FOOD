<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CLFilter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.leyhangCategoriesFragment"
    tools:listitem="@layout/leyhang_filter_item">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RVCategories"
        android:layout_width="391dp"
        android:layout_height="750dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnRecommendFilter"
        tools:listitem="@layout/leyhang_filter_item" />

    <Button
        android:id="@+id/BtnFilterFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="Filter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BtnSavedFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:text="Saved"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BtnRecommendFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Recommend"
        app:layout_constraintEnd_toStartOf="@+id/BtnSavedFilter"
        app:layout_constraintStart_toEndOf="@+id/BtnFilterFilter"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>