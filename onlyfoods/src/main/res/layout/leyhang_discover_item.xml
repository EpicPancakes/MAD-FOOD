<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="280dp">

    <ImageView
        android:id="@+id/IVDiscoverImage"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVDiscoverName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="12dp"
        android:text="TVDiscoverName"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IVDiscoverImage" />

    <TextView
        android:id="@+id/TVDiscoverCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVDiscoverName" />

    <TextView
        android:id="@+id/TVDiscoverLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textColor="#4CAF50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVDiscoverCategory" />

    <ImageButton
        android:id="@+id/BTNHeartD"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/red_yellow_rounded_border_button"
        android:contentDescription="@string/edit_profile"
        android:src="@drawable/ic_heart_24dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/IVDiscoverImage"
        app:layout_constraintTop_toBottomOf="@+id/IVDiscoverImage"
        app:tint="@color/white" />

    <ImageButton
        android:id="@+id/BTNUnheartD"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/red_yellow_rounded_border_button"
        android:contentDescription="@string/edit_profile"
        android:src="@drawable/ic_heartbreak_24dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/IVDiscoverImage"
        app:layout_constraintTop_toBottomOf="@+id/IVDiscoverImage"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>