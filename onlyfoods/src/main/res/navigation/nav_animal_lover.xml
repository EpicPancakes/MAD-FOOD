<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_onlyfoods"
    app:startDestination="@id/DestMyProfile">
    <fragment
        android:id="@+id/DestAboutApp"
        android:name="com.example.onlyfoods.AboutAppFragment"
        android:label="@string/about_app_tb_string"
        tools:layout="@layout/fragment_about_app" />
    <fragment
        android:id="@+id/DestCat"
        android:name="com.example.onlyfoods.CatFragment"
        android:label="@string/cat"
        tools:layout="@layout/fragment_cat" />
    <fragment
        android:id="@+id/DestDog"
        android:name="com.example.onlyfoods.DogFragment"
        android:label="@string/dog"
        tools:layout="@layout/fragment_dog" />
    <fragment
        android:id="@+id/DestMyProfile"
        android:name="com.example.onlyfoods.MyProfileFragment"
        android:label="My Profile"
        tools:layout="@layout/fragment_my_profile">
        <action
            android:id="@+id/NextToDog"
            app:destination="@id/DestDog" />
        <action
            android:id="@+id/NextToHedgehog"
            app:destination="@id/DestHedgehog" />
        <action
            android:id="@+id/NextToEditProfile"
            app:destination="@id/DestEditProfile" />
        <action
            android:id="@+id/NextToFollows"
            app:destination="@id/DestFollows" />
        <action
            android:id="@+id/NextToRecommendations"
            app:destination="@id/DestRecommendations" />
    </fragment>
    <fragment
        android:id="@+id/DestHedgehog"
        android:name="com.example.onlyfoods.HedgehogFragment"
        android:label="@string/hedgehog"
        tools:layout="@layout/fragment_hedgehog" />
    <fragment
        android:id="@+id/DestEditProfile"
        android:name="com.example.onlyfoods.EditProfileFragment"
        android:label="@string/edit_profile"
        tools:layout="@layout/fragment_edit_profile" >
        <action
            android:id="@+id/NextToAddRecentPlace"
            app:destination="@id/DestAddRecentPlace" />
    </fragment>
    <fragment
        android:id="@+id/DestFollows"
        android:name="com.example.onlyfoods.FollowsFragment"
        android:label="Follows"
        tools:layout="@layout/fragment_follows" />
    <fragment
        android:id="@+id/DestRecommendations"
        android:name="com.example.onlyfoods.RecommendationsFragment"
        android:label="@string/recommendations" >
        <action
            android:id="@+id/NextToAddRecommendation"
            app:destination="@id/DestAddRecommendation" />
    </fragment>
    <fragment
        android:id="@+id/DestAddRecommendation"
        android:name="com.example.onlyfoods.AddRecommendation"
        android:label="Recommend a Place"
        tools:layout="@layout/fragment_add_recommendation" />
    <fragment
        android:id="@+id/DestAddRecentPlace"
        android:name="com.example.onlyfoods.AddRecentPlace"
        android:label="Add Recent Place"
        tools:layout="@layout/fragment_add_recent_place" />
</navigation>